{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "TokenOPS文档",
  "description": "TokenOPS.AI的官方文档，提供了关于TokenOPS.AI的使用指南、API参考、隐私政策和更新公告。",
  "colors": {
    "primary": "#3B82F6",
    "light": "#F8FAFC",
    "dark": "#0F172A"
  },
  "navigation": {
    "versions": [
      {
        "version": "简体中文",
        "tabs": [
          {
            "tab": "用户指南",
            "groups": [
              {
                "group": "入门",
                "pages": [
                  "userguide/introduction",
                  "userguide/quckstart",
                  {
                    "group": "AI客户端使用",
                    "pages": [
                      "userguide/aiclient/chatbox",
                      "userguide/aiclient/cherrystudio"
                    ]
                  }
                ]
              }
            ]
          },
          {
            "tab": "接口文档",
            "groups": [
              {
                "group": "文本生成",
                "openapi": "zh-hans/openapi.json"
              }
            ]
          },
          {
            "tab": "隐私&条款",
            "pages": [
              "legals/user-terms",
              "legals/privacy-policy",
              "legals/recharge-policy"
            ]
          },
          {
            "tab": "更新公告",
            "pages": [
              "changelogs/overview"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/tokenops.svg",
    "dark": "/logo-dark.svg",
    "href": "https://www.tokenops.ai"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "TokenOPS.AI",
      "href": "https://www.tokenops.ai"
    }
  },
  "errors": {
    "404": {
      "redirect": true
    }
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript",
        "go",
        "java",
        "php"
      ],
      "defaults": "required"
    }
  }
}